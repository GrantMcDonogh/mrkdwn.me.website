---
import Section from "./Section.astro";
import FeatureCard from "./FeatureCard.astro";
import { primaryFeatures } from "../content/features";
---

<Section id="features">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-body reveal">
      Everything you need to
      <span class="text-accent">build your knowledge base</span>
    </h2>
    <p class="mt-4 text-muted text-lg max-w-2xl mx-auto reveal reveal-delay-1">
      Powerful tools that work together seamlessly, so you can focus on what
      matters â€” your ideas.
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {primaryFeatures.map((feature, i) => (
      <FeatureCard
        icon={feature.icon}
        title={feature.title}
        description={feature.description}
        delay={Math.min(i + 1, 5)}
      />
    ))}
  </div>
</Section>
