<section class="py-12 border-y border-edge" style="background-color: var(--bg-secondary);">
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-12 text-muted text-sm">
      <span class="font-medium text-center">Built for Obsidian users who want their notes everywhere</span>
      <div class="flex items-center gap-6">
        <!-- Markdown icon -->
        <div class="flex items-center gap-2 text-muted/70">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="2" y="4" width="20" height="16" rx="2"/>
            <path d="M6 8v8l3-3 3 3V8"/>
            <path d="M17 12l-2-2v4"/>
            <path d="M15 14l2-2"/>
          </svg>
          <span class="text-xs font-medium">Markdown</span>
        </div>
        <!-- Cloud icon -->
        <div class="flex items-center gap-2 text-muted/70">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"/>
          </svg>
          <span class="text-xs font-medium">Cloud Sync</span>
        </div>
        <!-- AI icon -->
        <div class="flex items-center gap-2 text-muted/70">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M12 8V4H8"/>
            <rect x="2" y="2" width="20" height="20" rx="5"/>
            <path d="M8.5 12.5l2 2 5-5"/>
          </svg>
          <span class="text-xs font-medium">AI Powered</span>
        </div>
      </div>
    </div>
  </div>
</section>
